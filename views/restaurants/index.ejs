<% layout("layouts/boilerplate")%>
    <h1>restaurants</h1>
    <% for(restaurant of restaurants){%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%= restaurant.image %>" class="card-img-top" alt="...">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= restaurant.title %>
                        </h5>
                        <p class="card-text">
                            <%= restaurant.description %>
                        </p>
                        <a href="/restaurants/<%= restaurant._id %>" class="btn btn-primary">View <%= restaurant.title
                                %>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
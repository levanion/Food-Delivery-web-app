<% layout("layouts/boilerplate")%>
    <div class="row">
        <h1 class="text-center">Edit Restaurant</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/restaurants/<%= restaurant._id %>?_method=PUT" method="POST" novalidate
                class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" value="<%= restaurant.title %>"
                        name="restaurant[title]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image</label>
                    <input class="form-control" type="text" id="image" value="<%= restaurant.image %>"
                        name="restaurant[image]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" name="restaurant[description]" id="description" cols="30" rows="10"
                        required><%= restaurant.description %></textarea>
                    <div class="valid-feedback">
                        looks good!
                    </div>
                </div>
                <div>
                    <button class="btn btn-success">Edit</button>
                    <a class="btn btn-secondary" href="/restaurants/<%= restaurant._id %>">Back</a>
                </div>

            </form>
        </div>
    </div>
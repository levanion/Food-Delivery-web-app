<% layout("layouts/boilerplate")%>
    <div class="row">
        <h1 class="text-center">Add Restaurant</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/restaurants" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="restaurant[title]" required>
                    <div class="valid-feedback">
                        looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image</label>
                    <input class="form-control" type="text" id="image" name="restaurant[image]">
                    <div class="valid-feedback">
                        looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" name="restaurant[description]" id="description" cols="30" rows="10"
                        required></textarea>
                    <div class="valid-feedback">
                        looks good!
                    </div>
                </div>
                <div>
                    <button class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>